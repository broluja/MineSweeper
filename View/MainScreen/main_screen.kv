#: import GRID_SIZE Controller.settings.GRID_SIZE
#: import Cell Controller.cell.Cell

<MainScreenLabel@MDLabel>
    halign: 'center'
    font_style:'Body1'
    theme_text_color: 'Hint'

<MainScreenView>
    on_leave: root.clear_table()
    FloatLayout:
        pos: 0, -self.height // 2
        MainScreenLabel:
            id: welcome
            markup: True
            font_size: dp(44)
            color: 1, 1, 1, 1
            pos_hint: {'y': .9}

    FloatLayout:
        pos: 0, -self.height // 2 - 200
        MainScreenLabel:
            id: cell_counter
            text: f'Cells left: {Cell.cell_count}'
            font_size: dp(25)
            pos_hint: {'center_x': 0.1, 'y': .95}

        MainScreenLabel:
            id: mine_counter
            text: f'Mines left: {Cell.mine_count}'
            font_size: dp(25)
            pos_hint: {'center_x': 0.1, 'y': .9}

        MDTextButton:
            text: 'Mark Mine'
            on_press: root.flag()
            font_size: dp(30)
            size_hunt: None, None
            pos_hint: {'center_x': 0.1, 'y': 1}
            theme_text_color: 'Hint'

        MDFlatButton:
            text: 'Back'
            on_press:
                app.player = ''
                app.manager_screen.switch_screen('login')
            font_size: dp(30)

    FloatLayout:
        pos: 200, -self.height // 2 - 200
        GridLayout:
            pos: 350, -self.height // 2 + 200
            id: main_layout
            cols: GRID_SIZE
            rows: GRID_SIZE